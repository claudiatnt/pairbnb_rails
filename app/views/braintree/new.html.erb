<h1> Make Payment </h1>

<div class="panel panel-default bootstrap-basic">
  <div class="panel-heading">
    <h3 class="panel-title">Enter Card Details</h3>
  </div>

  <%= form_for :checkout_form, url: braintree_checkout_path, html: { id: "cardForm", class:"panel-body"} do |form| %>

    <div class="row">
      <div class="form-group col-xs-8">
        <!-- <label class="hosted-fieldslabel">Card Number</label> -->
        <!--  Hosted Fields div container -->
        <%= form.label :card_number, "Credit Card Number", html: {class: "hosted-fields--label"} %>
        <div id="card-number" class="form-control"></div>
      </div>


      <div class="form-group col-xs-4">
        <!-- <label class="hosted-fieldslabel">Card Number</label> -->
        <!--  Hosted Fields div container -->
        <%= form.label :cvv, "CVV", html: {class: "hosted-fields--label"} %>
        <div id="cvv" class="form-control"></div>
      </div>

      <div class="form-group col-xs-12">
        <!-- <label class="hosted-fieldslabel">Card Number</label> -->
        <!--  Hosted Fields div container -->
        <%= form.label :expiration_date, "Expiration Date", html: {class: "hosted-fields--label"} %>
        <div id="expiration-date" class="form-control"></div>
      </div>


      <%= form.hidden_field "payment_method_nonce" %>

      <%= form.hidden_field "id", value: @reservation.id %>
      <div class="button-container">
      <%= form.submit "Purchase", disabled: true, class: "btn btn-success btn-lg center-block", id: "submit-payment-btn" %>
      </div>


      <!-- end of row  -->
    </div>
  <% end %>
  <!-- end of panel panel default bootstrap -basic -->
</div>


<!-- Load the required client component. -->
<script src="https://js.braintreegateway.com/web/3.11.1/js/client.min.js"></script>

<!-- Load Hosted Fields component. -->
<script src="https://js.braintreegateway.com/web/3.11.1/js/hosted-fields.min.js"></script>


